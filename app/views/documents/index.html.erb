<p class="text-green-500"><%= notice %></p>

<h1>Documents</h1>

<div class="flex justify-between mb-4">
  <h2 class="text-lg font-medium">All Documents</h2>
  <%= link_to "New document", new_document_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="w-full overflow-x-auto">
  <table class="table-auto w-full">
    <thead>
      <tr>
        <th class="px-4 py-2">Description</th>
        <th class="px-4 py-2">Token</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <tr>
          <td class="border px-4 py-2"><%= document.description %></td>
          <td class="border px-4 py-2"><%= document.token %></td>
          <td class="border px-4 py-2"><%= link_to "Show", document, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>