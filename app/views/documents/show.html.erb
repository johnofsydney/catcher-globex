<p class="text-green-500"><%= notice %></p>

<%= render @document %>

<div class="flex justify-between mt-4">
  <%= link_to "Edit this document", edit_document_path(@document), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
  <%= link_to "Back to documents", documents_path, class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded mr-2" %>
  <% if @current_user&.can_destroy? %>
    <%= button_to "Destroy this document", @document, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mr-2" %>
  <% end %>
    <%= link_to "Home", root_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mr-2" %>
</div>

